{
  "name": "@asla/hono-decorator",
  "exports": "./src/mod.ts",
  "version": "0.0.1",
  "tasks": {
    "test": "deno run -A npm:vitest run",
    "check-type": "deno check src test",
    "check-fmt": "deno fmt --check src test",
    "build": "deno run -A npm:typescript/tsc -p tsconfig.build.json"
  },
  "compilerOptions": {
    "lib": ["es2024", "dom"]
  },
  "fmt": {
    "lineWidth": 120
  },
  "imports": {
    "hono": "npm:hono@^4.7.2"
  },
  "license": "MIT",
  "publish": {
    "include": ["README.md", "src/**"]
  }
}
